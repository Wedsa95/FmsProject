    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Vacancy.
    -->
    <changeSet id="20180912065715-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="employeer_id"
                                 baseTableName="vacancy"
                                 constraintName="fk_vacancy_employeer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employeer"/>

        <addForeignKeyConstraint baseColumnNames="degree_id"
                                 baseTableName="vacancy"
                                 constraintName="fk_vacancy_degree_id"
                                 referencedColumnNames="id"
                                 referencedTableName="degree"/>

        <addForeignKeyConstraint baseColumnNames="consulting_experience_id"
                                 baseTableName="vacancy"
                                 constraintName="fk_vacancy_consulting_experience_id"
                                 referencedColumnNames="id"
